// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ----------------------
// Impact Table
// ----------------------
model Impact {
  id        Int      @id @default(autoincrement())
  title     String   // e.g. "Have benefited from our education programs"
  value     Int      // e.g. 4474
  unit      String?  // e.g. "+", optional
  icon      String?  // e.g. "Rainbow", "Backpack", optional (map to your icons)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
